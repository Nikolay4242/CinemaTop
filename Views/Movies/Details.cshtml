@model CinemaProject.Models.Movie

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-light border border-warning p-4 mb-4">
    <h2>@Model.Title</h2>
    <p><strong>🎬 Режиссёр:</strong> @Model.Director</p>
    <p><strong>📅 Год:</strong> @Model.Year</p>
    <p><strong>📖 Описание:</strong> @Model.Description</p>
</div>

<h3 class="text-warning mb-3">🎟 Сеансы</h3>

<table class="table table-dark table-bordered table-striped">
    <thead class="table-warning text-dark">
        <tr>
            <th>Дата</th>
            <th>Время</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model.Sessions)
        {
                <tr>
                    <td>@session.Date.ToShortDateString()</td>
                    <td>@session.Time</td>
                    <td>@session.Price.ToString("C")</td>
                </tr>
        }
    </tbody>
</table>
